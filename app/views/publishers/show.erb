<h2><%= @publisher.name %></h2>

Books: <br>
<% @publisher.books.uniq.each do |b| %>
  <a href="/books/<%= b.slug %>"><%= b.name %></a><br>
<% end %>
<br>

Authors: <br>
<% @publisher.authors.uniq.each do |a| %>
  <a href='/authors/<%= a.slug %>'><%= a.name %></a><br>
<% end %>
<br>

Genres: <br>
<% @publisher.genres.uniq.each do |g| %>
  <a href='/genres/<%= g.slug %>'><%= g.name %></a><br>
<% end %>
<br>
